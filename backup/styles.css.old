/* ===================================
   RHYDLE WAITLIST - DESIGN SYSTEM
   Industrial Minimalism + Vibrant Orange
   =================================== */

:root {
    /* Colors */
    --bg-light: #FAFAFA;
    --bg-dark: #0A0A0A;
    --bg-elevated-light: #FFFFFF;
    --bg-elevated-dark: #141414;

    --text-primary-light: #0A0A0A;
    --text-primary-dark: #FAFAFA;
    --text-secondary-light: #666666;
    --text-secondary-dark: #A0A0A0;

    --accent: #FF6B2C;
    --accent-hover: #E8551A;
    --accent-active: #D14710;

    --border-light: #E5E5E5;
    --border-dark: #333333;

    --success: #10B981;
    --error: #EF4444;

    /* Spacing (8px grid) */
    --space-xs: 0.5rem;    /* 8px */
    --space-sm: 1rem;      /* 16px */
    --space-md: 1.5rem;    /* 24px */
    --space-lg: 2rem;      /* 32px */
    --space-xl: 3rem;      /* 48px */
    --space-2xl: 4rem;     /* 64px */
    --space-3xl: 6rem;     /* 96px */

    /* Typography */
    --font-display: 'Sora', sans-serif;

    /* Effects */
    --transition-fast: 150ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-base: 250ms cubic-bezier(0.4, 0, 0.2, 1);
    --transition-slow: 400ms cubic-bezier(0.4, 0, 0.2, 1);

    --shadow-sm: 0 1px 2px rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px rgba(0, 0, 0, 0.07);
    --shadow-lg: 0 10px 15px rgba(0, 0, 0, 0.1);
}

/* ===================================
   GLOBAL RESET & BASE STYLES
   =================================== */

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

body {
    font-family: var(--font-display);
    font-size: 16px;
    line-height: 1.5;
    color: var(--text-primary-light);
    background: var(--bg-light);
    overflow-x: hidden;
}

img {
    max-width: 100%;
    display: block;
}

button {
    font-family: inherit;
    cursor: pointer;
    border: none;
    background: none;
}

input, select {
    font-family: inherit;
}

/* ===================================
   UTILITY CLASSES
   =================================== */

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 var(--space-md);
}

@media (max-width: 768px) {
    .container {
        padding: 0 var(--space-sm);
    }
}

/* ===================================
   HEADER
   =================================== */

.header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    background: rgba(10, 10, 10, 0);
    backdrop-filter: blur(10px);
    transition: background var(--transition-base);
}

.header.scrolled {
    background: rgba(10, 10, 10, 0.9);
    box-shadow: 0 1px 0 var(--border-dark);
}

.header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 72px;
}

.logo {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary-dark);
    letter-spacing: 0.05em;
}

/* ===================================
   BUTTONS
   =================================== */

.btn-primary {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 2px;
    padding: var(--space-md) var(--space-xl);
    background: var(--accent);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    border-radius: 4px;
    transition: all var(--transition-base);
    width: 100%;
    min-height: 56px;
    position: relative;
    overflow: hidden;
}

.btn-primary::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: width var(--transition-slow), height var(--transition-slow);
}

.btn-primary:hover::before {
    width: 300px;
    height: 300px;
}

.btn-primary:hover {
    background: var(--accent-hover);
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(255, 107, 44, 0.3);
}

.btn-primary:active {
    background: var(--accent-active);
    transform: translateY(0);
}

.btn-subtitle {
    font-size: 0.75rem;
    font-weight: 500;
    opacity: 0.9;
}

.btn-secondary {
    padding: var(--space-sm) var(--space-md);
    background: transparent;
    color: var(--text-primary-dark);
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--border-dark);
    border-radius: 4px;
    transition: all var(--transition-fast);
}

.btn-secondary:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: var(--accent);
    color: var(--accent);
}

/* ===================================
   HERO SECTION - SPLIT LAYOUT
   =================================== */

.hero {
    min-height: 100vh;
    padding-top: 72px;
}

.hero-split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: calc(100vh - 72px);
}

.hero-left {
    background: var(--bg-dark);
    display: flex;
    align-items: center;
    padding: var(--space-3xl) var(--space-2xl);
    position: relative;
    overflow: hidden;
}

.hero-left::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 600px;
    height: 600px;
    background: radial-gradient(circle, rgba(255, 107, 44, 0.15) 0%, transparent 70%);
    animation: pulse 8s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.5; }
    50% { transform: scale(1.2); opacity: 0.8; }
}

.hero-content {
    max-width: 540px;
    position: relative;
    z-index: 1;
}

.badge {
    display: inline-block;
    padding: var(--space-xs) var(--space-sm);
    background: rgba(255, 107, 44, 0.2);
    color: var(--accent);
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    border-radius: 2px;
    margin-bottom: var(--space-md);
    animation: slideDown 0.6s ease-out;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.hero-title {
    font-size: clamp(2.5rem, 4vw, 3rem);
    font-weight: 800;
    line-height: 1.1;
    color: var(--text-primary-dark);
    margin-bottom: var(--space-md);
    animation: slideDown 0.6s ease-out 0.1s backwards;
}

.hero-divider {
    width: 60px;
    height: 3px;
    background: var(--accent);
    margin-bottom: var(--space-lg);
    animation: slideRight 0.8s ease-out 0.2s backwards;
}

@keyframes slideRight {
    from {
        width: 0;
        opacity: 0;
    }
    to {
        width: 60px;
        opacity: 1;
    }
}

.hero-benefits {
    list-style: none;
    margin-bottom: var(--space-2xl);
}

.hero-benefits li {
    font-size: 1.125rem;
    line-height: 1.75;
    color: var(--text-secondary-dark);
    padding-left: var(--space-md);
    position: relative;
    margin-bottom: var(--space-sm);
    animation: slideDown 0.6s ease-out backwards;
}

.hero-benefits li:nth-child(1) { animation-delay: 0.3s; }
.hero-benefits li:nth-child(2) { animation-delay: 0.4s; }
.hero-benefits li:nth-child(3) { animation-delay: 0.5s; }
.hero-benefits li:nth-child(4) { animation-delay: 0.6s; }

.hero-benefits li::before {
    content: 'â€¢';
    position: absolute;
    left: 0;
    color: var(--accent);
    font-weight: 700;
}

.hero-visual {
    width: 200px;
    height: 200px;
    opacity: 0.6;
    animation: fadeIn 1s ease-out 0.8s backwards;
}

@keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 0.6; }
}

.hero-visual svg {
    width: 100%;
    height: 100%;
}

/* Right Side */
.hero-right {
    background: var(--bg-light);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3xl) var(--space-2xl);
}

.hero-form-container {
    width: 100%;
    max-width: 480px;
}

/* ===================================
   PHONE MOCKUP
   =================================== */

.phone-mockup {
    position: relative;
    margin: 0 auto var(--space-2xl);
    animation: floatUp 0.8s ease-out;
}

@keyframes floatUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.phone-frame {
    width: 280px;
    height: 560px;
    margin: 0 auto;
    background: #1F1F1F;
    border-radius: 36px;
    padding: 12px;
    box-shadow:
        0 20px 40px rgba(0, 0, 0, 0.15),
        0 0 0 1px rgba(255, 255, 255, 0.1) inset;
    position: relative;
}

.phone-notch {
    position: absolute;
    top: 16px;
    left: 50%;
    transform: translateX(-50%);
    width: 120px;
    height: 24px;
    background: #0A0A0A;
    border-radius: 0 0 12px 12px;
    z-index: 10;
}

.phone-screen {
    width: 100%;
    height: 100%;
    background: linear-gradient(135deg, #0A0A0A 0%, #1F1F1F 100%);
    border-radius: 28px;
    overflow: hidden;
    position: relative;
}

.dashboard-preview {
    padding: var(--space-xl) var(--space-md);
}

.preview-header {
    margin-bottom: var(--space-md);
}

.preview-title {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--text-secondary-dark);
    text-transform: uppercase;
    letter-spacing: 0.1em;
}

.preview-cards {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
}

.preview-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    padding: var(--space-sm);
    transition: all var(--transition-base);
}

.preview-card:hover {
    background: rgba(255, 255, 255, 0.08);
    border-color: var(--accent);
}

.preview-card-label {
    font-size: 0.625rem;
    color: var(--text-secondary-dark);
    margin-bottom: 4px;
}

.preview-card-value {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary-dark);
    margin-bottom: 4px;
}

.preview-card-growth {
    font-size: 0.75rem;
    font-weight: 600;
}

.preview-card-growth.positive {
    color: var(--success);
}

.preview-card-growth.negative {
    color: var(--error);
}

.phone-blur {
    position: absolute;
    bottom: -80px;
    left: 0;
    right: 0;
    height: 120px;
    background: linear-gradient(to bottom, transparent 0%, var(--bg-light) 100%);
    pointer-events: none;
}

/* ===================================
   WAITLIST FORM
   =================================== */

.waitlist-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    animation: floatUp 0.8s ease-out 0.2s backwards;
}

.form-input,
.form-select {
    width: 100%;
    padding: var(--space-sm) var(--space-md);
    font-size: 1rem;
    color: var(--text-primary-light);
    background: var(--bg-elevated-light);
    border: 1px solid var(--border-light);
    border-radius: 4px;
    transition: all var(--transition-fast);
    height: 48px;
}

.form-input:focus,
.form-select:focus {
    outline: none;
    border-color: var(--accent);
    box-shadow: 0 0 0 3px rgba(255, 107, 44, 0.1);
}

.form-input::placeholder {
    color: var(--text-secondary-light);
}

.form-select-wrapper {
    position: relative;
}

.form-select {
    appearance: none;
    background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L6 6L11 1' stroke='%23666666' stroke-width='2' stroke-linecap='round'/%3E%3C/svg%3E");
    background-repeat: no-repeat;
    background-position: right var(--space-md) center;
    padding-right: var(--space-xl);
    cursor: pointer;
}

.form-select option {
    padding: var(--space-sm);
}

.form-trust {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-xs);
    flex-wrap: wrap;
    font-size: 0.875rem;
    color: var(--text-secondary-light);
    margin-top: var(--space-xs);
}

.trust-item {
    white-space: nowrap;
}

.trust-divider {
    color: var(--border-light);
}

.centered-form {
    max-width: 480px;
    margin: 0 auto;
}

/* ===================================
   SECTIONS
   =================================== */

.section {
    padding: var(--space-3xl) 0;
}

.section-light {
    background: var(--bg-light);
    color: var(--text-primary-light);
}

.section-dark {
    background: var(--bg-dark);
    color: var(--text-primary-dark);
}

.section-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    text-align: center;
    margin-bottom: var(--space-2xl);
}

@media (max-width: 768px) {
    .section {
        padding: var(--space-xl) 0;
    }

    .section-title {
        margin-bottom: var(--space-xl);
    }
}

/* ===================================
   PROBLEM SECTION
   =================================== */

.problem-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-lg);
    max-width: 1000px;
    margin: 0 auto;
}

.problem-card {
    background: var(--bg-elevated-dark);
    border: 1px solid var(--border-dark);
    border-radius: 4px;
    padding: var(--space-lg);
    transition: all var(--transition-base);
}

.problem-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
}

.problem-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--text-primary-dark);
    margin-bottom: var(--space-sm);
}

.problem-divider {
    width: 40px;
    height: 2px;
    background: var(--accent);
    margin-bottom: var(--space-sm);
}

.problem-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-secondary-dark);
}

/* ===================================
   SOLUTION SECTION
   =================================== */

.feature {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    align-items: center;
    margin-bottom: var(--space-3xl);
}

.feature:last-child {
    margin-bottom: 0;
}

.feature-reverse {
    direction: rtl;
}

.feature-reverse > * {
    direction: ltr;
}

.feature-image {
    width: 100%;
}

.screenshot-placeholder {
    background: var(--bg-elevated-light);
    border: 1px solid var(--border-light);
    border-radius: 8px;
    padding: var(--space-lg);
    box-shadow: var(--shadow-md);
    transition: all var(--transition-base);
}

.screenshot-placeholder:hover {
    box-shadow: var(--shadow-lg);
    border-color: var(--accent);
}

.screenshot-content {
    min-height: 240px;
}

.screenshot-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--text-secondary-light);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-md);
}

.screenshot-bars {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
}

.bar-group {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
}

.bar-label {
    min-width: 80px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-secondary-light);
}

.bar {
    flex: 1;
    height: 32px;
    background: linear-gradient(90deg, var(--accent) 0%, var(--accent-hover) 100%);
    border-radius: 4px;
    width: var(--value, 50%);
    transition: width var(--transition-slow);
}

.bar-value {
    min-width: 60px;
    text-align: right;
    font-size: 0.875rem;
    font-weight: 700;
    color: var(--text-primary-light);
}

.roi-comparison {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    margin-top: var(--space-lg);
}

.roi-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-sm) var(--space-md);
    background: rgba(0, 0, 0, 0.02);
    border-radius: 4px;
}

.roi-platform {
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--text-primary-light);
}

.roi-multiplier {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-secondary-light);
}

.roi-multiplier.positive {
    color: var(--success);
}

.roi-multiplier.negative {
    color: var(--error);
}

.feature-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary-light);
    margin-bottom: var(--space-sm);
}

.feature-divider {
    width: 40px;
    height: 3px;
    background: var(--accent);
    margin-bottom: var(--space-md);
}

.feature-description {
    font-size: 1rem;
    line-height: 1.75;
    color: var(--text-secondary-light);
    max-width: 480px;
}

@media (max-width: 968px) {
    .feature,
    .feature-reverse {
        grid-template-columns: 1fr;
        direction: ltr;
        gap: var(--space-xl);
    }
}

/* ===================================
   FAQ SECTION
   =================================== */

.faq-list {
    max-width: 800px;
    margin: 0 auto;
}

.faq-item {
    border-bottom: 1px solid var(--border-dark);
}

.faq-question {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-md) 0;
    font-size: 1rem;
    font-weight: 500;
    color: var(--text-primary-dark);
    text-align: left;
    transition: color var(--transition-fast);
}

.faq-question:hover {
    color: var(--accent);
}

.faq-icon {
    font-size: 1.5rem;
    font-weight: 300;
    color: var(--accent);
    transition: transform var(--transition-base);
    flex-shrink: 0;
    margin-left: var(--space-md);
}

.faq-item.active .faq-icon {
    transform: rotate(45deg);
}

.faq-answer {
    max-height: 0;
    overflow: hidden;
    transition: max-height var(--transition-base);
}

.faq-item.active .faq-answer {
    max-height: 500px;
}

.faq-answer-content {
    padding-bottom: var(--space-md);
    font-size: 1rem;
    line-height: 1.75;
    color: var(--text-secondary-dark);
}

/* ===================================
   CTA SECTION
   =================================== */

.cta-section {
    padding: var(--space-3xl) 0;
}

/* ===================================
   FOOTER
   =================================== */

.footer {
    background: var(--bg-dark);
    padding: var(--space-2xl) 0;
}

.footer-content {
    text-align: center;
}

.footer-brand {
    margin-bottom: var(--space-lg);
}

.footer-logo {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--text-primary-dark);
    letter-spacing: 0.05em;
    margin-bottom: var(--space-xs);
}

.footer-tagline {
    font-size: 0.875rem;
    color: var(--text-secondary-dark);
}

.footer-divider {
    width: 100%;
    height: 1px;
    background: var(--border-dark);
    margin-bottom: var(--space-lg);
}

.footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: var(--space-md);
}

.footer-links {
    display: flex;
    gap: var(--space-lg);
}

.footer-links a {
    font-size: 0.875rem;
    color: var(--text-secondary-dark);
    text-decoration: none;
    transition: color var(--transition-fast);
}

.footer-links a:hover {
    color: var(--accent);
}

.footer-copyright {
    font-size: 0.75rem;
    color: var(--text-secondary-dark);
}

@media (max-width: 768px) {
    .footer-bottom {
        flex-direction: column;
        text-align: center;
    }

    .footer-links {
        flex-wrap: wrap;
        justify-content: center;
    }
}

/* ===================================
   MODAL
   =================================== */

.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(10, 10, 10, 0.8);
    backdrop-filter: blur(8px);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    pointer-events: none;
    transition: opacity var(--transition-base);
}

.modal.active {
    opacity: 1;
    pointer-events: all;
}

.modal-content {
    background: var(--bg-elevated-light);
    border-radius: 8px;
    padding: var(--space-2xl);
    max-width: 400px;
    width: 90%;
    text-align: center;
    transform: scale(0.9);
    transition: transform var(--transition-base);
}

.modal.active .modal-content {
    transform: scale(1);
}

.modal-icon {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-md);
    background: var(--success);
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 2rem;
    font-weight: 700;
}

.modal-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-primary-light);
    margin-bottom: var(--space-sm);
}

.modal-text {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--text-secondary-light);
    margin-bottom: var(--space-lg);
}

/* ===================================
   RESPONSIVE - MOBILE/TABLET
   =================================== */

@media (max-width: 968px) {
    .hero-split {
        grid-template-columns: 1fr;
    }

    .hero-left {
        padding: var(--space-2xl) var(--space-lg);
    }

    .hero-right {
        padding: var(--space-2xl) var(--space-lg);
    }

    .hero-content {
        max-width: 100%;
    }

    .hero-visual {
        display: none;
    }

    .phone-frame {
        width: 240px;
        height: 480px;
    }

    .phone-notch {
        width: 100px;
        height: 20px;
    }

    .problem-grid {
        grid-template-columns: 1fr;
        gap: var(--space-md);
    }
}

@media (max-width: 640px) {
    .header-container {
        height: 64px;
    }

    .logo {
        font-size: 1.125rem;
    }

    .btn-secondary {
        font-size: 0.75rem;
        padding: var(--space-xs) var(--space-sm);
    }

    .hero {
        padding-top: 64px;
    }

    .hero-split {
        min-height: auto;
    }

    .hero-left {
        padding: var(--space-xl) var(--space-md);
    }

    .hero-right {
        padding: var(--space-xl) var(--space-md);
    }

    .hero-title {
        font-size: 2rem;
    }

    .phone-mockup {
        margin-bottom: var(--space-xl);
    }

    .form-trust {
        font-size: 0.75rem;
    }
}

/* ===================================
   SCROLL ANIMATIONS
   =================================== */

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.animate-on-scroll {
    animation: fadeInUp 0.8s ease-out;
}

/* ===================================
   PERFORMANCE OPTIMIZATIONS
   =================================== */

@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}
